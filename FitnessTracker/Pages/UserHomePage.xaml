<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.Pages.UserHomePage"
             Title="UserHomePage"
             BackgroundColor="Black">
    <VerticalStackLayout>
        <Label
            x:Name="UserLabel"
            Text="{Binding User.Username, StringFormat='Welcome {0}!'}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="Header"/>
        <Frame HasShadow="True"
            BorderColor="White"
            CornerRadius="10"
            Padding="10"
            Margin="10">
            <StackLayout>
                <Label Text="Quote of the day!"
               FontSize="Large"
               HorizontalOptions="Center" />
                <Label Text="{Binding QuoteOfTheDay}"
               FontSize="Small"
               HorizontalOptions="Center" />
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>