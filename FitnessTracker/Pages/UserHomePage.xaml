<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.Pages.UserHomePage"
             Title="UserHomePage"
             BackgroundColor="Black">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalOptions" Value="End"/>
            <Setter Property="VerticalOptions" Value="Center"/>
        </Style>
        <Style TargetType="Label" x:Key="Title">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="Grid.ColumnSpan" Value="2"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="Grid.ColumnSpan" Value="2"/>
        </Style>
        <Style TargetType="Entry">
            <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            <Setter Property="MinimumWidthRequest" Value="200"/>
            <Setter Property="MaximumWidthRequest" Value="500"/>
        </Style>
        <Style TargetType="Entry" x:Key="PhysEntry">
            <Setter Property="MinimumWidthRequest" Value="100"/>
            <Setter Property="MaximumWidthRequest" Value="100"/>
        </Style>
    </ContentPage.Resources>
    <Grid
        RowDefinitions="*,4*">
        <Grid
            ColumnDefinitions="*,*"
            RowDefinitions="*,*"
            Grid.Row="0">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding Path=Height, StringFormat='Height: {0}'}"
                />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding Path=Weight, StringFormat='Weight: {0}'}"
                />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Text="{Binding Path=Dob, StringFormat='Date of Birth: {0}'}"
                />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Path=Bmi, StringFormat='BMI: {0}'}"
                />

        </Grid>
        
    </Grid>
</ContentPage>