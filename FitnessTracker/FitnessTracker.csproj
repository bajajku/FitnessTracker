	  <None Remove="Resources\Images\inclinebench.gif" />
	  <None Remove="Resources\Images\jumpingjacks.gif" />
	  <None Remove="Resources\Images\lateralraises.gif" />
	  <None Remove="Resources\Images\latpulldown.gif" />
	  <None Remove="Resources\Images\legextension.gif" />
	  <None Remove="Resources\Images\legpress.gif" />
	  <None Remove="Resources\Images\plank.gif" />
	  <None Remove="Resources\Images\preacher.gif" />
